{
  "info": {
    "name": "QA Portfolio - API (JSONPlaceholder)",
    "_postman_id": "e7d1d12d-3096-4737-9322-a6fb99232094",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET /users should return 200 and array",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/users",
          "protocol": "https",
          "host": [
            "jsonplaceholder",
            "typicode",
            "com"
          ],
          "path": [
            "users"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response is an array', function () {",
              "  const json = pm.response.json();",
              "  pm.expect(Array.isArray(json)).to.eql(true);",
              "  pm.expect(json.length).to.be.above(0);",
              "});",
              "",
              "pm.test('Each user has id, name, email', function () {",
              "  const json = pm.response.json();",
              "  json.forEach(u => {",
              "    pm.expect(u).to.have.property('id');",
              "    pm.expect(u).to.have.property('name');",
              "    pm.expect(u).to.have.property('email');",
              "  });",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /users/9999 should return 404 (negative)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/users/9999",
          "protocol": "https",
          "host": [
            "jsonplaceholder",
            "typicode",
            "com"
          ],
          "path": [
            "users",
            "9999"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 404', function () {",
              "  pm.response.to.have.status(404);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}